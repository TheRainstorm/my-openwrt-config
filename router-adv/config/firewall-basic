# input
config rule
    option name 'Allow-ssh-input'
    list proto 'tcp'
    option src 'wan'
    option dest_port '2202'
    option target 'ACCEPT'
    option family 'ipv6'

config rule
    option name 'Allow-WireGuard-wg0'
    option src 'wan'
    option proto 'udp'
    option target 'ACCEPT'
    option dest_port '51820'

config rule
    option name 'Allow-WireGuard-s2s'
    option src 'wan'
    option proto 'udp'
    option target 'ACCEPT'
    option dest_port '51821'

# forward
config rule
    option name 'Allow-ssh-forward'
    option family 'ipv6'
    option src 'wan'
    option dest 'lan'
    option dest_port '2202'
    option target 'ACCEPT'